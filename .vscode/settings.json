{
  "sync.gist": "ce3ff9d53df48d738f1e9e86fff55a8c",
  "sync.autoDownload": true,
  "sync.quietSync": false,
  "eslint.options": {
    
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "eslint.autoFixOnSave" : true,
  },
  "eslint.format.enable": true,
  // 重新设定tabsize
  "editor.tabSize": 2,
  // #每次保存的时候将代码按eslint格式进行修复
  
  "editor.formatOnSave": true,
  // 自动修复

  // 配置 ESLint 检查的文件类型
  "eslint.validate": ["javascript","vue","html"],
  //  #让prettier使用eslint的代码格式进行校验 
  "prettier.eslintIntegration": true,
  //  #去掉代码结尾的分号 
  "prettier.semi": false,
  //  #使用带引号替代双引号 
  "prettier.singleQuote": true,
  //  #让函数(名)和后面的括号之间加个空格
  "javascript.format.insertSpaceBeforeFunctionParenthesis": true,
  // #这个按用户自身习惯选择 
  "vetur.format.defaultFormatter.html": "js-beautify-html",
  // #让vue中的js按编辑器自带的ts格式进行格式化 
  "vetur.format.defaultFormatter.js": "vscode-typescript",
  "vetur.format.defaultFormatterOptions": {
    "js-beautify-html": {
      "wrap_attributes": "force-aligned"
      // #vue组件中html代码格式化样式
    }
  },
  // 格式化stylus, 需安装Manta's Stylus Supremacy插件
  "stylusSupremacy.insertColons": false, // 是否插入冒号
  "stylusSupremacy.insertSemicolons": false, // 是否插入分好
  "stylusSupremacy.insertBraces": false, // 是否插入大括号
  "stylusSupremacy.insertNewLineAroundImports": false, // import之后是否换行
  "stylusSupremacy.insertNewLineAroundBlocks": false,
  "eslint.migration.2_x": "off",
  //禁止代码提示 同样禁止了模板生成
  // "editor.suggestOnTriggerCharacters": false,
  // "editor.quickSuggestions": false,
  // ""editor.quickSuggestions": false,"
  "editor.fontSize": 14,
  "emmet.excludeLanguages": [
  
    "markdown"
  ],
  "emmet.includeLanguages": {},
  "emmet.variables": {
    "lang": "zh-cn"
  },
  "editor.wordWrap": "on",
  "files.autoSave": "afterDelay",
  "php.validate.executablePath": "",
  //   "liveServer.settings.donotShowInfoMsg": true // 两个选择器中是否换行
  "autoprefixer.browsers": [
    "last 3 versions",
    "ie >= 10",
    "ie_mob >= 10",
    "ff >= 30",
    "chrome >= 34",
    "safari >= 6",
    "ios >= 6",
    "android >= 4.4"
  ],
  "breadcrumbs.enabled": true,
  "stylusCompile.settings.formats": [
    {
      "extensionName": ".css",
      "savePath": "/css/"
    }
  ],
  "sass.andStared": [
    "active",
    "focus",
    "hover",
    "nth-child"
  ],
  "easysass.compileAfterSave": true, //保存自动编译
  "easysass.excludeRegex": "",
  "easysass.formats": [
    //nested: 嵌套缩进的css代码
    //expanded: 没有缩进 扩展的css代码
    //compact: 简洁格式的css代码
    //compressed: 压缩后的css代码
    {
      "format": "expanded",
      "extension": ".css" //设置编译输出的文件后缀
    },
    {
      "format": "compressed",
      "extension": ".min.css" //设置编译输出的文件后缀
    }
  ],
  "easysass.targetDir": "./css/",
  "terminal.integrated.fontSize": 14,
  "editor.renderWhitespace": "all",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "explorer.compactFolders": false,
  "html.format.contentUnformatted": "",
  "html.format.unformatted": "",
  "liveServer.settings.donotShowInfoMsg": true,
  "editor.detectIndentation": false,
  // 代码提示和补全
  //提供css输出路径的设置(可以绝对或者相对)
}